public class Main
{
	public static void main(String[] args) {
	    int row = 5;
	    for (int i = 2; i <= row; i++) {
	        int num = 2;
	        for (int j = 2; j <= i; j++) {
	            System.out.print(num + " ");
	            num = num + 2;
	        }
	        System.out.println();
	    }
	}
}
